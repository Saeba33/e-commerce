{% extends 'base.html.twig' %}

{% block title %}
	Nouveau produit
{% endblock %}

{% block body %}
	<div class="flex flex-col max-w-xl mx-auto my-8">

		<h2 class="text-3xl font-bold text-center mb-20">Ajouter un produit</h2>

		{{ form_start(form) }}
		<div class="flex flex-col gap-6">
			{{ form_widget(form.name, {'attr': {'class': 'input input-bordered w-full mt-1', 'placeholder': 'Nom du produit'}}) }}
			{{ form_widget(form.description, {'attr': {'class': 'textarea textarea-bordered w-full mt-1', 'placeholder': 'Description du produit'}}) }}
			{{ form_widget(form.price, {'attr': {'class': 'input input-bordered w-full mt-1', 'placeholder': 'Prix en euros'}}) }}
			{{ form_widget(form.sub_category, {'attr': {'class': 'checkbox  w-full mt-1'}}) }}

			<button type="submit" class="btn btn-soft btn-success">Sauvegarder</button>
		</div>
		{{ form_end(form) }}
	</div>
{% endblock %}
