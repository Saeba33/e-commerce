{% extends 'base.html.twig' %}

{% block title %}Gestion des produits
{% endblock %}

{% block body %}
	<div class="container mx-auto px-4 py-6">
		<div class="content-container">

			<div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-8 gap-4">
				<div>
					<h1 class="text-3xl font-bold text-gray-800 mb-2">
						Gestion des produits
					</h1>
					<p class="text-gray-600">Gérez vos produits</p>
				</div>
				<a href="{{ path('app_product_new') }}" class="custom-btn-with-logo new-btn">
					<ion-icon name="add-outline"></ion-icon>
					Nouveau produit
				</a>
			</div>

			{% include 'layouts/_flash_message.html.twig' %}

			<div class="card bg-white">
				<div class="card-body p-0">
					{% if products|length > 0 %}
			
						<div class="hidden xl:block overflow-x-auto">
							<table class="table table-zebra w-full border-2 border-base-300">
								<thead class="bg-gray-300">
									<tr>
										<th class="text-center py-4 px-2 border-r border-base-300">ID</th>
										<th class="text-left py-4 px-2 border-r border-base-300">Nom</th>
										<th class="text-left py-4 px-2 border-r border-base-300">Description</th>
										<th class="text-center py-4 px-2 border-r border-base-300">Stock</th>
										<th class="text-center py-4 px-2 border-r border-base-300">Prix</th>
										<th class="text-center py-4 px-2 border-r border-base-300">Actions</th>
										<th class="text-center py-4 px-2 border-r border-base-300">Historique</th>
									</tr>
								</thead>
								<tbody>
									{% for product in products %}
										<tr class="hover:bg-base-50 transition-colors duration-200">
											<td class="text-center py-4 px-2 sm:px-6 border-r-2 border-base-300">
												<span>{{ product.id }}</span>
											</td>
											<td class="py-4 px-2 border-r-2 border-base-300">
												<div class="text-left font-semibold">{{ product.name }}</div>
											</td>
											<td class="py-4 px-2 border-r-2 border-base-300">
												<div class="text-left max-w-xs">{{ product.description | slice(0,50) }}
													{% if product.description|length > 50 %}...
													{% endif %}
												</div>
											</td>
											<td class="text-center py-4 px-2 border-r-2 border-base-300">
												{% if product.stock > 0 %}
													<span class="font-medium">{{ product.stock }}</span>
												{% else %}
													<span class="font-medium text-red-600">Épuisé</span>
												{% endif %}
											</td>
											<td class="text-center py-4 px-2 border-r-2 border-base-300">
												<span class="font-medium">{{ product.price }} €</span>
											</td>
											<td class="py-4 px-2 border-r-2 border-base-300">
												<div class="flex flex-col xl:flex-row justify-center gap-2">
													<a href="{{ path('app_product_edit', {'id': product.id}) }}" class="custom-btn-with-logo edit-btn">
														<ion-icon name="create-outline"></ion-icon>
														<span class="hidden xl:inline">Modifier</span>
													</a>
													<form method="post" action="{{ path('app_product_delete', {'id': product.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer le produit « {{ product.name }} » ?')" style="display: inline;">
														<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
														<button type="submit" class="custom-btn-with-logo delete-btn w-full">
															<ion-icon name="trash-outline"></ion-icon>
															<span class="hidden xl:inline">Supprimer</span>
														</button>
													</form>
													<a href="{{ path('app_product_stock_add', {'id': product.id})}}" class="custom-btn-with-logo new-btn">
														<ion-icon name="add-outline"></ion-icon>
														<span class="hidden xl:inline">Stock</span>
													</a>
												</div>
											</td>
											<td class="py-4 px-2">
												<a href="{{ path('app_product_stock_history', {'id': product.id})}}" class="text-gray-600 text-lg flex items-center justify-center hover:text-blue-600 min-h-[2.5rem]">
													<ion-icon name="newspaper-outline"></ion-icon>
												</a>
											</td>
										</tr>
									{% endfor %}
								</tbody>
							</table>
						</div>

						<div class="xl:hidden p-4 space-y-4">
							{% for product in products %}
								<div class="bg-white border border-gray-200 rounded-lg shadow-sm p-4">
									<div class="flex justify-between items-start mb-3">
										<div class="flex-1">
											<h3 class="font-semibold text-lg text-gray-900 mb-1">{{ product.name }}</h3>
											<p class="text-sm text-gray-600 mb-2">ID: {{ product.id }}</p>
											{% if product.description %}
												<p class="text-sm text-gray-700 mb-3">{{ product.description | slice(0,100) }}
													{% if product.description|length > 100 %}...
													{% endif %}
												</p>
											{% endif %}
										</div>
									</div>
									
									<div class="grid grid-cols-2 gap-3 mb-4">
										<div class="text-center bg-gray-50 rounded-lg p-3">
											<p class="text-xs text-gray-600 mb-1">Stock</p>
											<p class="font-semibold">
												{% if product.stock > 0 %}
													{{ product.stock }}
												{% else %}
													<span class="text-red-600">Épuisé</span>
												{% endif %}
											</p>
										</div>
										<div class="text-center bg-gray-50 rounded-lg p-3">
											<p class="text-xs text-gray-600 mb-1">Prix</p>
											<p class="font-semibold">{{ product.price }} €</p>
										</div>
									</div>

									<div class="flex flex-wrap gap-2">
										<a href="{{ path('app_product_edit', {'id': product.id}) }}" class="custom-btn-with-logo edit-btn flex-1">
											<ion-icon name="create-outline"></ion-icon>
											<span>Modifier</span>
										</a>
										<a href="{{ path('app_product_stock_add', {'id': product.id})}}" class="custom-btn-with-logo new-btn flex-1">
											<ion-icon name="add-outline"></ion-icon>
											<span>Stock</span>
										</a>
									</div>
									
									<div class="flex gap-2 mt-2">
										<form method="post" action="{{ path('app_product_delete', {'id': product.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer le produit « {{ product.name }} » ?')" class="flex-1">
											<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
											<button type="submit" class="custom-btn-with-logo delete-btn w-full">
												<ion-icon name="trash-outline"></ion-icon>
												<span>Supprimer</span>
											</button>
										</form>
										<a href="{{ path('app_product_stock_history', {'id': product.id})}}" class="text-gray-600 flex items-center justify-center hover:text-blue-600 min-h-[2.5rem] px-4 border border-gray-300 rounded-lg">
											<ion-icon name="newspaper-outline"></ion-icon>
										</a>
									</div>
								</div>
							{% endfor %}
						</div>
					{% else %}
						<div class="text-center py-16">
							<ion-icon name="cube-outline" class="text-6xl text-gray-400 mb-4"></ion-icon>
							<h3 class="text-xl font-semibold text-gray-600 mb-2">Aucun produit</h3>
							<a href="{{ path('app_product_new') }}" class="custom-btn-with-logo new-btn">
								<ion-icon name="add-outline"></ion-icon>
								Créer un produit
							</a>
						</div>
					{% endif %}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
