{% extends 'base.html.twig' %}

{% block title %}Gestion des produits
{% endblock %}

{% block body %}
	<div class="container mx-auto px-4 py-6">
		<div
			class="content-container">
			{# En-tête avec titre et bouton d'ajout #}
			<div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-8 gap-4">
				<div>
					<h1 class="text-3xl font-bold text-gray-800 mb-2">
						Gestion des produits
					</h1>
					<p class="text-gray-600">Gérez les produits de votre e-boutique</p>
				</div>
				<a href="{{ path('app_product_new') }}" class="custom-btn-with-logo new-btn">
					<ion-icon name="add-outline"></ion-icon>
					Nouveau produit
				</a>
			</div>

			{# Messages flash #}
			{% include 'layouts/_flash_message.html.twig' %}

			{# Tableau des produits #}
			<div class="card bg-white">
				<div class="card-body p-0">
					{% if products|length > 0 %}
						<div class="overflow-x-auto">
							<table class="table table-zebra w-full border-2 border-base-300">
								<thead class="bg-gray-300">
									<tr>
										<th class="text-center py-4 px-2 sm:px-6 border-r border-base-300">
											<div class="flex items-center justify-center gap-1 sm:gap-2">
												<ion-icon name="key-outline"></ion-icon>
												<span class="hidden sm:inline">ID</span>
											</div>
										</th>
										<th class="py-4 px-2 sm:px-6 border-r border-base-300">
											<div class="flex items-center gap-1 sm:gap-2">
												<ion-icon name="cube-outline"></ion-icon>
												Nom
											</div>
										</th>
										<th class="py-4 px-2 sm:px-6 border-r border-base-300">
											<div class="flex items-center gap-1 sm:gap-2">
												<ion-icon name="document-text-outline"></ion-icon>
												<span class="hidden sm:inline">Description</span>
												<span class="sm:hidden">Desc.</span>
											</div>
										</th>
										<th class="py-4 px-2 sm:px-6 border-r border-base-300">
											<div class="flex items-center gap-1 sm:gap-2">
												<ion-icon name="archive-outline"></ion-icon>
												Stock
											</div>
										</th>
										<th class="py-4 px-2 sm:px-6 border-r border-base-300">
											<div class="flex items-center gap-1 sm:gap-2">
												<ion-icon name="cash-outline"></ion-icon>
												Prix
											</div>
										</th>
										<th class="text-center py-4 px-2 sm:px-6">
											<div class="flex items-center justify-center gap-1 sm:gap-2">
												<ion-icon name="settings-outline"></ion-icon>
												<span class="hidden sm:inline">Actions</span>
											</div>
										</th>
									</tr>
								</thead>
								<tbody>
									{% for product in products %}
										<tr class="hover:bg-base-50 transition-colors duration-200">
											<td class="text-center py-4 px-2 sm:px-6 border-r-2 border-base-300">
												<span>{{ product.id }}</span>
											</td>
											<td class="py-4 px-2 sm:px-6 border-r-2 border-base-300">
												<div class="font-semibold">{{ product.name }}</div>
											</td>
											<td class="py-4 px-2 sm:px-6 border-r-2 border-base-300">
												<div class="max-w-xs truncate">{{ product.description | slice(0,50) }}
													{% if product.description|length > 50 %}...
													{% endif %}
												</div>
											</td>
											<td class="py-4 px-2 sm:px-6 border-r-2 border-base-300">
												{% if product.stock > 0 %}
													<span class="badge badge-success">{{ product.stock }}</span>
												{% else %}
													<span class="badge badge-error">Épuisé</span>
												{% endif %}
											</td>
											<td class="py-4 px-2 sm:px-6 border-r-2 border-base-300">
												<span class="font-semibold">{{ product.price }}€</span>
											</td>
											<td class="py-4 px-2 sm:px-6">
												<div class="flex flex-col sm:flex-row justify-center gap-2">
													<a href="{{ path('app_product_edit', {'id': product.id}) }}" class="custom-btn-with-logo edit-btn text-center">
														<ion-icon name="create-outline"></ion-icon>
														Modifier
													</a>
													<a onclick="return confirm('Êtes-vous sûr de vouloir supprimer le produit « {{ product.name }} » ?')" href="{{ path('app_product_delete', {'id': product.id}) }}" class="custom-btn-with-logo delete-btn text-center">
														<ion-icon name="trash-outline"></ion-icon>
														Supprimer
													</a>
													<a href="{{ path('app_product_stock_add', {'id': product.id})}}" class="custom-btn-with-logo new-btn text-center">
														<ion-icon name="add-outline"></ion-icon>
														<span class="hidden sm:inline">Stock</span>
														<span class="sm:hidden">+</span>
													</a>
												</div>
											</td>
										</tr>
									{% endfor %}
								</tbody>
							</table>
						</div>
					{% else %}
						<div class="text-center py-16">
							<ion-icon name="cube-outline" class="text-6xl text-gray-400 mb-4"></ion-icon>
							<h3 class="text-xl font-semibold text-gray-600 mb-2">Aucun produit</h3>
							<a href="{{ path('app_product_new') }}" class="custom-btn-with-logo new-btn">
								<ion-icon name="add-outline"></ion-icon>
								Créer un produit
							</a>
						</div>
					{% endif %}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
