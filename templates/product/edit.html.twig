{% extends 'base.html.twig' %}

{% block title %}Éditer produit
{% endblock %}

{% block body %}
	<div class="flex flex-col max-w-2xl mx-auto my-8">
		<div class="content-container">
			<div class="flex justify-between items-center gap-6 mb-8">
				<h2 class="text-3xl font-bold">Éditer un produit</h2>
				<a href="{{ path('app_product') }}" class="custom-btn-with-logo back-btn">
					<ion-icon name="return-down-back-outline"></ion-icon>
					Retour
				</a>
			</div>

			{{ form_start(form) }}
			<div class="flex flex-col gap-6">
				<div>
					{{ form_label(form.name, 'Nom du produit', {'label_attr': {'class': 'block text-sm font-medium mb-2'}}) }}
					{{ form_widget(form.name, {'attr': {'class': 'input-style input-style-neutral', 'placeholder': 'Nom du produit'}}) }}
				</div>

				<div>
					{{ form_label(form.description, 'Description', {'label_attr': {'class': 'block text-sm font-medium mb-2'}}) }}
					{{ form_widget(form.description, {'attr': {'class': 'input-style input-style-neutral', 'placeholder': 'Description du produit', 'rows': 4}}) }}
				</div>

				<div>
					{{ form_label(form.image, 'Image du produit', {'label_attr': {'class': 'block text-sm font-medium mb-2'}}) }}
					<div class="add-image-btn cursor-pointer">
						<ion-icon name="image-outline"></ion-icon>
						<ion-icon name="document-attach-outline"></ion-icon>
						Choisir une image
						{{ form_widget(form.image, {'attr': {'class': 'opacity-0 absolute inset-0 w-full h-full cursor-pointer'}}) }}
					</div>
				</div>

				<div>
					{{ form_label(form.stock, 'Stock initial', {'label_attr': {'class': 'block text-sm font-medium mb-2'}}) }}
					{{ form_widget(form.stock, {'attr': {'class': 'input-style input-style-neutral', 'placeholder': 'Quantité en stock'}}) }}
				</div>

				<div>
					{{ form_label(form.price, 'Prix', {'label_attr': {'class': 'block text-sm font-medium mb-2'}}) }}
					{{ form_widget(form.price, {'attr': {'class': 'input-style input-style-neutral', 'placeholder': 'Prix en euros'}}) }}
				</div>

				<div>
					{{ form_label(form.sub_category, 'Sous-catégories', {'label_attr': {'class': 'block text-sm font-medium mb-2'}}) }}
					<div class="grid grid-cols-2 gap-2">
						{{ form_widget(form.sub_category, {'attr': {'class': 'checkbox-style'}}) }}
					</div>
				</div>

				<button type="submit" class="custom-btn edit-btn">
					Mettre à jour
				</button>
			</div>
			{{ form_end(form) }}
		</div>
	</div>
{% endblock %}
