{% extends 'base.html.twig' %}

{% block title %}Ajouter du stock
{% endblock %}

{% block body %}
	<div class="flex flex-col max-w-xl mx-auto my-8">
		<div class="content-container">
			<div class="flex justify-between items-center mb-8 gap-6">
				<h2 class="text-3xl font-bold">Ajouter du stock</h2>
				<a href="{{ path('app_product') }}" class="custom-btn-with-logo back-btn">
					<ion-icon name="return-down-back-outline"></ion-icon>
					Retour
				</a>
			</div>

			{{ form_start(form) }}
			<div class="flex flex-col gap-6">
				<div>
					{{ form_widget(form.quantity, {'attr': {'class': 'input-style-neutral', 'placeholder': 'Quantité à ajouter', 'min': '1'}}) }}
				</div>

				<button type="submit" class="custom-btn new-btn">
					Ajouter au stock
				</button>
			</div>
			{{ form_end(form) }}
		</div>
	</div>
{% endblock %}
