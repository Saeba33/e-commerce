{% extends 'base.html.twig' %}

{% block title %}Ajouter du stock
{% endblock %}

{% block body %}
	<div class="container mx-auto px-4 py-6">
		<div class="content-container max-w-3xl mx-auto">

			<div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-8 gap-4">
				<div>
					<h1 class="text-3xl font-bold text-gray-800 mb-2">
						Ajouter du stock
					</h1>
					<p class="text-gray-600">Augmentez le stock de "{{ product.name }}"</p>
				</div>
			</div>

			{% include 'layouts/_flash_message.html.twig' %}

			<div class="card bg-white max-w-2xl mx-auto">
				<div class="card-body">
					<div class="border-b border-gray-200 pb-4 mb-6">
						<h3 class="text-lg font-semibold text-gray-700 mb-2">Stock actuel :
							{{ product.stock }}
							unités</h3>
						<p class="text-sm text-gray-600">La quantité ajoutée sera automatiquement ajoutée au stock existant</p>
					</div>

					{{ form_start(form) }}

					<div class="space-y-6">
						<div>
							{{ form_label(form.quantity, 'Quantité à ajouter', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
							{{ form_widget(form.quantity, {'attr': {'class': 'input-style input-style-common text-lg', 'placeholder': '0', 'min': '1'}}) }}
							{{ form_errors(form.quantity) }}
							<p class="text-xs text-gray-500 mt-1">La quantité doit être supérieure à 0</p>
						</div>
					</div>

					<!-- Boutons d'action -->
					<div class="border-t border-gray-200 pt-6 mt-8">
						<div class="flex flex-col sm:flex-row gap-4 justify-end">
							<a href="{{ path('app_product') }}" class="custom-btn-with-logo back-btn">
								<ion-icon name="close-outline"></ion-icon>
								Annuler
							</a>
							<button type="submit" class="custom-btn-with-logo new-btn">
								<ion-icon name="add-outline"></ion-icon>
								Ajouter au stock
							</button>
						</div>
					</div>

					{{ form_end(form) }}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
