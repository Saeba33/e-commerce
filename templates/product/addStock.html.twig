{% extends 'base.html.twig' %}

{% block title %}Ajouter du stock
{% endblock %}

{% block body %}
<div class="flex flex-col max-w-xl mx-auto my-8">
	<div class="content-container">
		<div class="flex justify-between items-center mb-8">
			<h2 class="text-3xl font-bold">Ajouter du stock</h2>
<a href="{{ path('app_product') }}" class="custom-btn back-btn">

				<ion-icon name="return-down-back-outline"></ion-icon>
				Retour
			</a>
		</div>

		<div class="mb-6 p-4 bg-blue-50 rounded-lg">
			<h3 class="font-semibold text-lg">{{ product.name }}</h3>
			<p class="text-gray-600">Stock actuel :
				<span class="font-medium">{{ product.stock }}</span>
			</p>
		</div>

		{{ form_start(form) }}
		<div class="flex flex-col gap-6">
			<div>
				{{ form_label(form.quantity, 'Quantité à ajouter', {'label_attr': {'class': 'block text-sm font-medium mb-2'}}) }}
				{{ form_widget(form.quantity, {'attr': {'class': 'input-style', 'placeholder': 'Nombre d\'unités à ajouter', 'min': '1'}}) }}
					<small class="text-gray-500 mt-1">Cette quantité sera ajoutée au stock existant</small>
				</div>

<button type="submit" class="custom-btn new-btn">

					<ion-icon name="add-outline"></ion-icon>
					Ajouter au stock
				</button>
			</div>
			{{ form_end(form) }}
		</div>
	</div>
{% endblock %}
