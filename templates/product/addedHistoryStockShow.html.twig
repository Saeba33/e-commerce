{% extends 'base.html.twig' %}

{% block title %}Historique du stock
{% endblock %}

{% block body %}
	<div class="container mx-auto px-4 py-6">
		<div
			class="content-container">
			{# En-tête avec titre et bouton de retour #}
			<div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-8 gap-4">
				<div>
					<h1 class="text-3xl font-bold text-gray-800 mb-2">
						Historique du stock
					</h1>
					<p class="text-gray-600">Historique des ajouts de stock</p>
				</div>
				<a href="{{ path('app_product') }}" class="custom-btn-with-logo back-btn">
					<ion-icon name="return-down-back-outline"></ion-icon>
					Retour
				</a>
			</div>

			{# Messages flash #}
			{% include 'layouts/_flash_message.html.twig' %}

			{# Tableau de l'historique #}
			<div class="card bg-white">
				<div class="card-body p-0">
					{% if productsAdded|length > 0 %}
						<div class="overflow-x-auto">
							<table class="table table-zebra w-full border-2 border-base-300">
								<thead class="bg-gray-300">
									<tr>
										<th class="text-center py-4 px-2 sm:px-6 border-r border-base-300">
											<div class="flex items-center justify-center gap-1 sm:gap-2">
												<ion-icon name="key-outline"></ion-icon>
												<span class="hidden sm:inline">ID</span>
											</div>
										</th>
										<th class="py-4 px-2 sm:px-6 border-r border-base-300">
											<div class="flex items-center gap-1 sm:gap-2">
												<ion-icon name="cube-outline"></ion-icon>
												Produit
											</div>
										</th>
										<th class="py-4 px-2 sm:px-6 border-r border-base-300">
											<div class="flex items-center gap-1 sm:gap-2">
												<ion-icon name="add-outline"></ion-icon>
												Quantité ajoutée
											</div>
										</th>
										<th class="text-center py-4 px-2 sm:px-6">
											<div class="flex items-center justify-center gap-1 sm:gap-2">
												<ion-icon name="calendar-outline"></ion-icon>
												<span class="hidden sm:inline">Date d'ajout</span>
												<span class="sm:hidden">Date</span>
											</div>
										</th>
									</tr>
								</thead>
								<tbody>
									{% for productHistory in productsAdded %}
										<tr class="hover:bg-base-50 transition-colors duration-200">
											<td class="text-center py-4 px-2 sm:px-6 border-r-2 border-base-300">
												<span>{{ productHistory.id }}</span>
											</td>
											<td class="py-4 px-2 sm:px-6 border-r-2 border-base-300">
												<div class="font-semibold">{{ productHistory.product.name }}</div>
											</td>
											<td class="py-4 px-2 sm:px-6 border-r-2 border-base-300">
												<span class="badge badge-success">+{{ productHistory.quantity }}</span>
											</td>
											<td class="text-center py-4 px-2 sm:px-6">
												<span class="text-sm">{{ productHistory.createdAt|date('d/m/Y H:i') }}</span>
											</td>
										</tr>
									{% endfor %}
								</tbody>
							</table>
						</div>
					{% else %}
						<div class="text-center py-16">
							<ion-icon name="archive-outline" class="text-6xl text-gray-400 mb-4"></ion-icon>
							<h3 class="text-xl font-semibold text-gray-600 mb-2">Aucun historique</h3>
							<p class="text-gray-500">Aucun ajout de stock n'a été enregistré</p>
						</div>
					{% endif %}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
