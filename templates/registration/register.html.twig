{% extends 'base.html.twig' %}

{% block title %}
	Inscription
{% endblock %}

{% block body %}
	<div class="flex-1 flex items-center justify-center m-2">
		<div class="flex flex-col max-w-xl mx-auto w-full px-4">
			<div class="content-container">
				<h1 class="text-3xl font-bold text-center mt-4 mb-12">Inscription</h1>
				<div class="flex flex-col gap-6">
					{{ form_errors(registrationForm) }}
					{{ form_start(registrationForm) }}
					<div class="flex flex-col gap-6">
						<div>
							{{ form_widget(registrationForm.firstname, {'attr': {'class': 'input-style input-style-register', 'placeholder': 'Prénom'}}) }}
						</div>

						<div>
							{{ form_widget(registrationForm.lastname, {'attr': {'class': 'input-style input-style-register', 'placeholder': 'Nom de famille'}}) }}

						</div>

						<div>
							{{ form_widget(registrationForm.email, {'attr': {'class': 'input-style input-style-register', 'placeholder': 'E-mail'}}) }}

						</div>

						<div>
							{{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'input-style input-style-register', 'placeholder': 'Mot de passe (6 caractères minimum)'}}) }}

						</div>

						<div class="flex items-center gap-3">
							{{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'checkbox-style checkbox-style-register'}}) }}
							<label for="{{ registrationForm.agreeTerms.vars.id }}" class="text-sm">Veuillez accepter les conditions générales</label>
						</div>

						<button type="submit" class="custom-btn register-btn">
							Créer mon compte
						</button>

						<div class="text-center mt-4">
							<a href="{{ path('app_login') }}" class="text-blue-600 hover:text-blue-800 underline">
								Déjà un compte ? Se connecter
							</a>
						</div>
					</div>
					{{ form_end(registrationForm) }}
				</div>
			</div>
		</div>
	{% endblock %}
