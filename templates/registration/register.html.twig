{% extends 'base.html.twig' %}

{% block title %}
	Register
{% endblock %}

{% block body %}
	<div class="flex flex-col max-w-[600px] mx-auto my-8">
		<h1 class="text-3xl font-bold text-center mb-6">Register</h1>
		<div class="flex flex-col gap-12">
			{{ form_errors(registrationForm) }}
			{{ form_start(registrationForm) }}
			<div class="flex flex-col gap-6">
				<div>
					{{ form_label(registrationForm.firstname) }}
					{{ form_widget(registrationForm.firstname, {'attr': {'class': 'input input-bordered w-full mt-1', 'placeholder': 'Enter your first name'}}) }}
				</div>

				<div>
					{{ form_label(registrationForm.lastname) }}
					{{ form_widget(registrationForm.lastname, {'attr': {'class': 'input input-bordered w-full mt-1', 'placeholder': 'Enter your last name'}}) }}
				</div>

				<div>
					{{ form_label(registrationForm.email) }}
					{{ form_widget(registrationForm.email, {'attr': {'class': 'input input-bordered w-full mt-1', 'placeholder': 'Enter your email'}}) }}

				</div>

				<div>
					{{ form_label(registrationForm.plainPassword) }}
					{{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'input input-bordered w-full mt-1', 'placeholder': 'Enter your password'}}) }}
				</div>

				<div class="flex items-center gap-6">
					{{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'checkbox checkbox-primary'}}) }}
					{{ form_label(registrationForm.agreeTerms) }}
				</div>

				<button type="submit" class="btn btn-primary">Register</button>
			</div>

			{{ form_end(registrationForm) }}
		</div>
	</div>
{% endblock %}
