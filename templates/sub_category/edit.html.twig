{% extends 'base.html.twig' %}

{% block title %}
	Éditer sous-catégorie
{% endblock %}

{% block body %}
	<div class="flex flex-col max-w-xl mx-auto my-8">

		<h2 class="text-3xl font-bold text-center mb-20">Éditer une sous-catégorie</h2>

		{{ form_start(form) }}
		<div class="flex flex-col gap-6">
			{{ form_widget(form.name, {'attr': {'class': 'input input-bordered w-full mt-1', 'placeholder': 'Nom de la sous-catégorie'}}) }}
			{{ form_widget(form.category, {'attr': {'class': 'select select-bordered w-full mt-1'}}) }}

			<button type="submit" class="btn btn-soft btn-warning">Mettre à jour</button>
		</div>
		{{ form_end(form) }}
	</div>
{% endblock %}
