{% extends 'base.html.twig' %}

{% block title %}SubCategory index
{% endblock %}

{% block body %}
	<div class="container">
		<h1>SubCategory index</h1>

		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Catégorie</th>
					<th>Sous-Catégorie</th>
					<th>Actions</th>

				</tr>
			</thead>
			<tbody>
				{% for sub_category in sub_categories %}
					<tr>
						<td>#
							{{ sub_category.id }}</td>
						<td>{{ sub_category.category.name }}</td>
						<td>{{ sub_category.name }}</td>
						<td>

							<a href="{{ path('app_sub_category_edit', {'id': sub_category.id}) }}" class="btn btn-soft btn-info">Modifier</a>

							<a href="{{ path('app_sub_category_delete', {'id': sub_category.id}) }}" class="btn btn-soft btn-error">Supprimer</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="3">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<a href="{{ path('app_sub_category_new') }}" class="btn btn-soft btn-success">Créer une sous-catégorie</a>
	</div>

{% endblock %}
