{% extends 'base.html.twig' %}

{% block title %}
	Éditer catégorie
{% endblock %}

{% block body %}
	<div class="flex flex-col max-w-xl mx-auto my-8">

		<h2 class="text-3xl font-bold text-center mb-20">Éditer une catégorie</h2>


		{{ form_start(form) }}
		<div class="flex flex-col gap-6">
			{{ form_widget(form.name, {'attr': {'class': 'input input-bordered w-full mt-1', 'placeholder': 'Nom de la nouvelle catégorie'}}) }}
			<button type="submit" class="btn btn-outline btn-warning">Mettre à jour</button>
		</div>
		{{ form_end(form) }}
	</div>
{% endblock %}
