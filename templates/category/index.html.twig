{% extends 'base.html.twig' %}

{% block title %}Hello CategoryController!
{% endblock %}

{% block body %}
	<div class="container mx-auto px-4 py-6">
		<div
			class="content-container">
			{# En-tête avec titre et bouton d'ajout #}
			<div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-8 gap-4">
				<div>
					<h1 class="text-3xl font-bold text-gray-800 mb-2">
						Gestion des catégories
					</h1>
					<p class="text-gray-600">Gérez les catégories de votre e-boutique</p>
				</div>
				<a href="{{ path('app_category_new') }}" class="custom-btn-with-logo new-btn">
					<ion-icon name="add-outline"></ion-icon>
					Nouvelle catégorie
				</a>
			</div>

			{# Messages flash #}
			{% include 'layouts/_flash_message.html.twig' %}

			{# Tableau des catégories #}
			<div class="card bg-white">
				<div class="card-body p-0">
					{% if categories|length > 0 %}
						<div class="overflow-x-auto border-base-300">
							<table class="table table-zebra w-full border-2 ">
								<thead class="bg-gray-300 ">
									<tr>
										<th class="text-center py-4 px-2 sm:px-6 border-r border-base-300">
											<div class="flex items-center justify-center gap-1 sm:gap-2">
												<ion-icon name="key-outline"></ion-icon>
												<span class="hidden sm:inline">ID</span>
											</div>
										</th>
										<th class="py-4 px-2 sm:px-6 border-r border-base-300">
											<div class="flex items-center sm:justify-start justify-center gap-1 sm:gap-2">
												<ion-icon name="pricetag-outline"></ion-icon>
												<span class="hidden sm:inline">Nom de la catégorie</span>
											</div>
										</th>
										<th class="text-center py-4 px-2 sm:px-6">
											<div class="flex items-center justify-center gap-1 sm:gap-2">
												<ion-icon name="settings-outline"></ion-icon>
												<span class="hidden sm:inline">Actions</span>
											</div>
										</th>
									</tr>
								</thead>
								<tbody>
									{% for category in categories %}
										<tr class="hover:bg-base-50 transition-colors duration-200">
											<td class="text-center py-4 px-2 sm:px-6 border-r-2 border-base-300">
												<span>{{ category.id }}</span>
											</td>
											<td class="py-4 px-2 sm:px-6 border-r-2 border-base-300">
												<div class="font-semibold">{{ category.name }}</div>
											</td>
											<td class="py-4 px-2 sm:px-6">
												<div class="flex flex-col sm:flex-row justify-center gap-2">
													<a href="{{ path('app_category_edit', {'id': category.id}) }}" class="custom-btn-with-logo edit-btn text-center">
														<ion-icon name="create-outline"></ion-icon>
														Modifier
													</a>
													<a onclick="return confirm('Êtes-vous sûr de vouloir supprimer la catégorie « {{ category.name }} » ?')" href="{{ path('app_category_delete', {'id': category.id}) }}" class="custom-btn-with-logo delete-btn text-center">
														<ion-icon name="trash-outline"></ion-icon>
														Supprimer
													</a>
												</div>
											</td>
										</tr>
									{% endfor %}
								</tbody>
							</table>
						</div>
					{% else %}
						<div class="text-center py-16">
							<ion-icon name="folder-open-outline" class="text-6xl text-gray-400 mb-4"></ion-icon>
							<h3 class="text-xl font-semibold text-gray-600 mb-2">Aucune catégorie</h3>
							<a href="{{ path('app_category_new') }}" class="custom-btn-with-logo new-btn">
								<ion-icon name="add-outline"></ion-icon>
								Créer une catégorie
							</a>
						</div>
					{% endif %}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
