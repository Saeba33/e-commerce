{% extends 'base.html.twig' %}

{% block title %}
	Hello CategoryController!
{% endblock %}

{% block body %}
	<div class="flex flex-col max-w-xl mx-auto my-8">
		<h2 class="text-3xl font-bold text-center mb-20">Liste des catégories</h2>
		<div class="overflow-x-auto rounded-box border border-base-content/5 bg-base-100">
			{% include 'layouts/_flash_message.html.twig' %}
			<table class="table">
				<thead>
					<tr>
						<th>Id</th>
						<th>Libellé</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					{% for category in categories %}
						<tr>
							<td>#{{ category.id }}</td>
							<td>{{ category.name }}</td>
							<td>
								<div class="flex gap-2">
									<a href="{{ path('app_category_update', {'id': category.id}) }}" class="btn btn-outline btn-info">Modifier</a>
									<a onclick="return confirm('Voulez vous vraiment supprimler cette catégorie?')" href="{{ path('app_category_delete', {'id': category.id}) }}" class="btn btn-error text-white">Supprimer</a>
								</div>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>

		<a href="{{ path('app_category_new') }}" class="btn btn-primary mt-4">Ajouter une nouvelle catégorie</a>
	</div>
{% endblock %}
