{% if pageCount > 1 %}
	<nav aria-label="Pagination Navigation" class="mt-20">
		<div class="flex justify-center items-center gap-2">
			{% if previous is defined %}
				<a href="{{ path(route, query|merge({(pageParameterName):previous})) }}" class="flex items-center justify-center w-10 h-10 rounded-lg border border-gray-300 bg-white text-gray-600 hover:bg-gray-50 hover:border-gray-400 transition-all duration-200">
					<ion-icon name="chevron-back-outline" class="text-lg"></ion-icon>
				</a>
			{% else %}
				<button disabled class="flex items-center justify-center w-10 h-10 rounded-lg border border-gray-200 bg-gray-100 text-gray-400 cursor-not-allowed">
					<ion-icon name="chevron-back-outline" class="text-lg"></ion-icon>
				</button>
			{% endif %}

			{% for page in pagesInRange %}
				{% if page != current %}
					<a href="{{ path(route, query|merge({(pageParameterName):page})) }}" class="flex items-center justify-center w-10 h-10 rounded-lg border border-gray-300 bg-white text-gray-700 hover:bg-blue-50 hover:border-blue-300 hover:text-blue-600 transition-all duration-200 font-medium">
						{{ page }}
					</a>
				{% else %}
					<button class="flex items-center justify-center w-10 h-10 rounded-lg bg-blue-600 text-white font-medium shadow-sm" aria-current="page">
						{{ page }}
					</button>
				{% endif %}
			{% endfor %}

			{% if next is defined %}
				<a href="{{ path(route, query|merge({(pageParameterName):next})) }}" class="flex items-center justify-center w-10 h-10 rounded-lg border border-gray-300 bg-white text-gray-600 hover:bg-gray-50 hover:border-gray-400 transition-all duration-200">
					<ion-icon name="chevron-forward-outline" class="text-lg"></ion-icon>
				</a>
			{% else %}
				<button disabled class="flex items-center justify-center w-10 h-10 rounded-lg border border-gray-200 bg-gray-100 text-gray-400 cursor-not-allowed">
					<ion-icon name="chevron-forward-outline" class="text-lg"></ion-icon>
				</button>
			{% endif %}
		</div>
	</nav>
{% endif %}
