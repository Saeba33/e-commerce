{% extends 'base.html.twig' %}

{% block title %}Gestion des frais de livraison
{% endblock %}

{% block body %}
	<div class="container mx-auto px-4 py-6">
		<div class="content-container">

			<div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-8 gap-4">
				<div>
					<h1 class="text-3xl font-bold text-gray-800 mb-2">
						Frais de livraison
					</h1>
					<p class="text-gray-600">Gérez les frais de livraison par ville</p>
				</div>
				<a href="{{ path('app_city_new') }}" class="custom-btn-with-logo new-btn">
					<ion-icon name="add-outline"></ion-icon>
					Nouvelle ville
				</a>
			</div>

			{% include 'layouts/_flash_message.html.twig' %}

			<div class="card bg-white">
				<div class="card-body p-0">
					{% if cities|length > 0 %}
			
						<div class="hidden xl:block overflow-x-auto">
							<table class="table table-zebra w-full border-2 border-base-300">
								<thead class="bg-gray-300">
									<tr>
										<th class="text-center py-4 px-2 border-r border-base-300">ID</th>
										<th class="text-left py-4 px-2 border-r border-base-300">Nom de la ville</th>
										<th class="text-center py-4 px-2 border-r border-base-300">Frais de livraison</th>
										<th class="text-center py-4 px-2 border-r border-base-300">Actions</th>
									</tr>
								</thead>
								<tbody>
									{% for city in cities %}
										<tr class="hover:bg-base-50 transition-colors duration-200">
											<td class="text-center py-4 px-2 sm:px-6 border-r-2 border-base-300">
												<span>{{ city.id }}</span>
											</td>
											<td class="py-4 px-2 border-r-2 border-base-300">
												<div class="text-left font-semibold">{{ city.name }}</div>
											</td>
											<td class="text-center py-4 px-2 border-r-2 border-base-300">
												<span class="font-medium">{{ city.shippingCost }} €</span>
											</td>
											<td class="text-center py-4 px-2">
												<div class="flex justify-center gap-2">
													<a href="{{ path('app_city_edit', {'id': city.id}) }}" class="custom-btn-with-logo edit-btn">
														<ion-icon name="create-outline"></ion-icon>
														Modifier
													</a>
													<form method="post" action="{{ path('app_city_delete', {'id': city.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette ville ?')" class="inline">
														<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ city.id) }}">
														<button type="submit" class="custom-btn-with-logo delete-btn">
															<ion-icon name="trash-outline"></ion-icon>
															Supprimer
														</button>
													</form>
												</div>
											</td>
										</tr>
									{% endfor %}
								</tbody>
							</table>
						</div>

						<div class="xl:hidden p-4 space-y-4">
							{% for city in cities %}
								<div class="bg-white border border-gray-200 rounded-lg shadow-sm p-4">
									<div class="flex justify-between items-start mb-3">
										<div class="flex-1">
											<p class="text-sm text-gray-600 mb-1">ID: {{ city.id }}</p>
											<h3 class="font-semibold text-lg text-gray-900 mb-1">{{ city.name }}</h3>
											<p class="text-sm text-gray-700">Frais de livraison : <span class="font-medium">{{ city.shippingCost }} €</span></p>
										</div>
									</div>

									<div class="flex flex-wrap gap-2">
										<a href="{{ path('app_city_edit', {'id': city.id}) }}" class="custom-btn-with-logo edit-btn flex-1">
											<ion-icon name="create-outline"></ion-icon>
											<span>Modifier</span>
										</a>
										<form method="post" action="{{ path('app_city_delete', {'id': city.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette ville ?')" class="flex-1">
											<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ city.id) }}">
											<button type="submit" class="custom-btn-with-logo delete-btn w-full">
												<ion-icon name="trash-outline"></ion-icon>
												<span>Supprimer</span>
											</button>
										</form>
									</div>
								</div>
							{% endfor %}
						</div>
					{% else %}
						<div class="text-center py-16">
							<ion-icon name="location-outline" class="text-6xl text-gray-400 mb-4"></ion-icon>
							<h3 class="text-xl font-semibold text-gray-600 mb-2">Aucune ville</h3>
							<a href="{{ path('app_city_new') }}" class="custom-btn-with-logo new-btn">
								<ion-icon name="add-outline"></ion-icon>
								Créer une ville
							</a>
						</div>
					{% endif %}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
